<% layout('layout/boilerplate') %> 
<div class="row">
    <div class="col-6 offset-3">
        <div class="card" style="width: 18rem;">
            <img src="<%=ground.image%> "class="card-img-top" alt="...">
            <div class="card-body text-center">
              <h5 class="card-title"><%=ground.title%> </h5>
              <p class="card-text"><%=ground.description%> </p>
            </div>
            <ul class="list-group list-group-flush text-center">
              <li class="list-group-item text-muted"><%=ground.location%> </li>
              <li class="list-group-item">$<%=ground.price %>/night</li>
            </ul>
            <div class="card-body text-center">
              <a class="card-link btn btn-warning" href="/campground/<%=ground._id%>/edit" class="card-link">Wanna Edit!!</a>
            </div>
            <div class="card-body text-center">
                <a class="card-link btn btn-success" href="/campground" class="card-link">ALL CAMPGROUND</a>
            </div>
            <div class="card-body text-center">
                <form action="/campground/<%=ground._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">DELETE</button>
                </form>
            </div>
        </div>
    </div>
</div>